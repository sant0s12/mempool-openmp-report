#!/usr/bin/env bash
set -e
if [[ ! -d "/home/santos/Polybox/master/semester4/semester-project/report" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/santos/Polybox/master/semester4/semester-project/report")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/santos/Polybox/master/semester4/semester-project/report" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/santos/Polybox/master/semester4/semester-project/report/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/santos/Polybox/master/semester4/semester-project/report/.envrc" "/home/santos/Polybox/master/semester4/semester-project/report/.direnv"/*.rc
