# EditorConfig (http://editorconfig.org/)

# Default Settings
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true
max_line_length = 100

[*.cls]
indent_size = 1

[*.{bib,tex}]
indent_size = 2
# LaTeX files should have one sentence per line.  Rationale: enable meaningful content change
# tracking by VCS.
max_line_length = 0

[Makefile]
indent_style = tab

[README.md]
max_line_length = 80

[LICENSE]
max_line_length = 72
indent_size = 2
